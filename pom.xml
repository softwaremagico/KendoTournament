
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.softwaremagico</groupId>
    <artifactId>ktg</artifactId>
    <version>0.9.7.2</version>
    <packaging>jar</packaging>
    <description>Tool for the management of different Kendo Tournaments.</description>

    <name>KendoTournamentGenerator</name>
    <url>http://maven.apache.org</url>
    <repositories>
        <repository>
            <url>http://repo1.maven.org/maven2/</url>
            <id>swing-layout</id>
            <layout>default</layout>
            <name>Repository for library Library[swing-layout]</name>
        </repository>
    </repositories>
    
    <organization>
        <name>Softwaremagico</name>
        <url>kendotournament.sourceforge.net</url>
    </organization>
    <developers>
        <developer>
            <name>Jorge Hortelano</name>
            <roles>
                <role>Project Manager</role>
                <role>Architect</role>
                <role>Software developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
	
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <linux.releasedir>install_linux</linux.releasedir>
        <linux.origin>linux-basic-files</linux.origin>
        <windows.releasedir>install_windows</windows.releasedir>
        <windows.origin>windows-basic-files</windows.origin>        
    </properties>
    
    <profiles>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>linux</family>
                </os>
            </activation>
            <build>
                <resources>
            <!-- Filter the file control.txt -->
                    <resource>
                        <directory>${linux.origin}</directory>
                        <filtering>true</filtering>
                        <includes>
                            <include>**/control</include>
                            <include>**/*.desktop</include>
                        </includes>
                    </resource>
            <!-- Not filtering the other files -->
                    <resource>
                        <directory>${linux.origin}</directory>
                        <filtering>false</filtering>
                        <excludes>
                            <exclude>**/control</exclude>
                            <exclude>**/*.desktop</exclude>
                        </excludes>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <configuration>
                                    <tasks>
                                        <copy todir="${linux.releasedir}/DEBIAN" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/DEBIAN" includes="**/*" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/usr" includes="**/*" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/../" includes="**/KendoTournamentGenerator.jar" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/lib" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/../lib" includes="**/*.jar" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/translations" overwrite="true" >
                                            <fileset dir="./translations" includes="**/*.xml" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/images" overwrite="true" >
                                            <fileset dir="./images" excludes="**/*.svg" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/database" overwrite="true" >
                                            <fileset dir="./database" includes="**/*_empty.*" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/manual" overwrite="true" >
                                            <fileset dir="./manual" includes="**/*.pdf" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator/manual" overwrite="true" >
                                            <fileset dir="./manual" includes="**/*.txt" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator" overwrite="true" flatten="true" >
                                            <fileset dir="./" includes="**/gnu.txt" />
                                        </copy>
                                        <copy todir="${linux.releasedir}/usr/share/kendo-tournament-generator" overwrite="true" flatten="true" >
                                            <fileset dir="./" includes="**/Readme.txt" />
                                        </copy>
                                
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <build>
                <resources>
            <!-- No filtering the other files -->
                    <resource>
                        <directory>${windows.origin}</directory>
                        <filtering>false</filtering>
                        <includes>
                            <include>**/*.ico</include>
                            <include>**/KendoTournamentGenerator.exe</include>
                            <include>**/*.iss</include>
                            <include>**/*.txt</include>
                        </includes>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <configuration>
                                    <tasks>
                                        <copy todir="${windows.releasedir}" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/../" includes="**/KendoTournamentGenerator.jar" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/lib" overwrite="true" >
                                            <fileset dir="${project.build.outputDirectory}/../lib" includes="**/*.jar" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/translations" overwrite="true" >
                                            <fileset dir="./translations" includes="**/*.xml" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/images" overwrite="true" >
                                            <fileset dir="./images" excludes="**/*.svg" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/database" overwrite="true" >
                                            <fileset dir="./database" includes="**/*_empty.*" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/manual" overwrite="true" >
                                            <fileset dir="./manual" includes="**/*.pdf" />
                                        </copy>
                                        <copy todir="${windows.releasedir}/manual" overwrite="true" >
                                            <fileset dir="./manual" includes="**/*.txt" />
                                        </copy>
                                        <copy todir="${windows.releasedir}" overwrite="true" flatten="true" >
                                            <fileset dir="./" includes="**/gnu.txt" />
                                        </copy>
                                        <copy todir="${windows.releasedir}" overwrite="true" flatten="true" >
                                            <fileset dir="./" includes="**/Readme.txt" />
                                        </copy>   
                                        <copy todir="${windows.releasedir}" overwrite="true" flatten="true" >
                                            <fileset dir="${project.build.outputDirectory}/" includes="**/icon.ico" />
                                        </copy>  
                                        <copy todir="${windows.releasedir}" overwrite="true" flatten="true" >
                                            <fileset dir="${project.build.outputDirectory}/" includes="**/KendoTournamentGenerator.exe" />
                                        </copy>  
                                        <copy todir="${windows.releasedir}" overwrite="true" flatten="true" >
                                            <fileset dir="${project.build.outputDirectory}/" includes="**/InstallScript.iss" />
                                        </copy>  
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
    
    <build>
        <finalName>KendoTournamentGenerator</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>com.softwaremagico.ktg.Main</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <version>2.4</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>
                                ${project.build.directory}/lib
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.swinglabs</groupId>
            <artifactId>swing-layout</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.itextpdf</groupId>
            <artifactId>itextpdf</artifactId>
            <version>5.1.3</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <version>1.0.13</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.18</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.7.2</version>
        </dependency>
        <dependency>
            <groupId>org.ajax4jsf</groupId>
            <artifactId>ajax4jsf</artifactId>
            <version>1.0.5</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
